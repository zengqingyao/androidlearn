<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activitys.LoginKeyboardActivity">


    <!-- app:mainColor 协议框的颜色 0xFFFD7541 == #FFFD7541 -->
    <!-- app:verifyCodeSize 验证码的长度  -->
    <!-- app:countDownDuration 验证码倒计时，单位毫秒  -->
    <com.zengqy.customview.customview.LoginPageView
            android:id="@+id/login_page_view"
            app:mainColor="#FFFD7541"
            app:verifyCodeSize="6"
            app:countDownDuration="30000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>