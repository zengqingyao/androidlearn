<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:zengqy="http://schemas.android.com/apk/res-auto"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activitys.InputNumberActivity">

    <com.zengqy.customview.customview.InputNumberView
            android:id="@+id/input_number_view"
            zengqy:min="-30"
            zengqy:max="30"
            zengqy:step="5"
            zengqy:defaultValue="0"
            zengqy:btnBackground="@drawable/shape_num_btn_bg_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>