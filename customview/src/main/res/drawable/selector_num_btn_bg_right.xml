<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 当按钮是press按下状态，drawable为shape_num_btn_bg_right_press -->
    <item android:state_pressed="true" android:drawable="@drawable/shape_num_btn_bg_right_press"/>

    <!-- 当按钮是disable状态的时候，使用配色方案为shape_num_btn_bg_right_press   -->
    <item android:state_enabled="false" android:drawable="@drawable/shape_num_btn_bg_right_press"/>

    <!-- 默认的配色方案   -->
    <item android:drawable="@drawable/shape_num_btn_bg_right"/>

</selector>