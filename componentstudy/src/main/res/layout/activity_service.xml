<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activitys.ServiceActivity">

    <TextView
            android:text="TextView"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView"/>
    <Button
            android:text="1.开启服务"
            android:onClick="startService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button5"/>
    <Button
            android:text="1.停止服务"
            android:onClick="stopService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button9"/>
    <Button
            android:text="1.绑定服务"
            android:onClick="bindService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button10"/>
    <Button
            android:text="1.解绑服务"
            android:onClick="unbindService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button11"/>
    <Button
            android:text="1.调用服务里面的方法"
            android:onClick="callRemoteServiceMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button12"/>
    <Button
            android:text="2.AIDL模仿阿里巴巴支付"
            android:onClick="startAliPayClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button13"/>
    <Button
            android:text="3.AIDL绑定和连接测试Activity"
            android:onClick="startAidlPersonTest"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button14"/>
    <Button
            android:text="4.调用LocalServer服务"
            android:onClick="callLocalServerMethod"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button15"/>
    <Button
            android:text="5.调用MessengerService服务"
            android:onClick="callMessengerServiceMethod"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_height="wrap_content" android:id="@+id/button16"/>
    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button17"/>
</LinearLayout>